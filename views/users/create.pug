extends ../layouts/common.pug

block content	
	h1 Create user

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method="POST")
		.form-group
			label(for='name') Name
			input#name.form-control(name="name", type='text' value= info ? info.name : "")
		.form-group
			label(for='phone') Phone number
			input#phone.form-control(name="phone", type='text' value= info ? info.phone : "")

		button.btn.btn-primary Create
